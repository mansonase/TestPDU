<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="0.8"
        android:id="@+id/tv_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_start_time"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Plan 1"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/tv_start_time"
        app:layout_constraintStart_toEndOf="@+id/tv_row"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_end_time"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="2023 0421\n13:43:02"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/tv_end_time"
        app:layout_constraintStart_toEndOf="@+id/tv_start_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_current"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="2023 0421\n13:43:02"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1.2"
        android:id="@+id/tv_current"
        app:layout_constraintStart_toEndOf="@+id/tv_end_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_voltage"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="110.555 mA"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/tv_voltage"
        app:layout_constraintStart_toEndOf="@+id/tv_current"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_power"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="110.555 v"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1.2"
        android:id="@+id/tv_power"
        app:layout_constraintStart_toEndOf="@+id/tv_voltage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_power_factor"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="110.555 watt"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="0.8"
        android:id="@+id/tv_power_factor"
        app:layout_constraintStart_toEndOf="@+id/tv_power"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_consumption"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="0.555"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/tv_consumption"
        app:layout_constraintStart_toEndOf="@+id/tv_power_factor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_none"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="1110.000"
        android:textSize="8sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="0.5"
        android:id="@+id/tv_none"
        app:layout_constraintStart_toEndOf="@+id/tv_consumption"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="0.555"
        android:textSize="8sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
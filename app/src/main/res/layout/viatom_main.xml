<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battery_level_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Battery Level : "
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battery_voltage_title"
        app:layout_constraintStart_toStartOf="@+id/battery_level_title"
        app:layout_constraintTop_toBottomOf="@+id/battery_level_title"
        android:layout_marginTop="20dp"
        android:text="Voltage : "
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systolic_title"
        app:layout_constraintStart_toStartOf="@+id/battery_level_title"
        app:layout_constraintTop_toBottomOf="@+id/battery_voltage_title"
        android:layout_marginTop="20dp"
        android:text="Systolic : "
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diastolic_title"
        app:layout_constraintStart_toStartOf="@+id/battery_level_title"
        app:layout_constraintTop_toBottomOf="@+id/systolic_title"
        android:layout_marginTop="20dp"
        android:text="Diastolic : "
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/able_to_click"
        android:text="unable"
        android:textSize="28dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/pulse_title"
        app:layout_constraintTop_toBottomOf="@+id/pulse_title"
        android:layout_marginTop="24px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pulse_title"
        app:layout_constraintStart_toStartOf="@+id/battery_level_title"
        app:layout_constraintTop_toBottomOf="@+id/diastolic_title"
        android:layout_marginTop="20dp"
        android:text="Pulse : "
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battery_level_viatom"
        app:layout_constraintStart_toEndOf="@+id/battery_level_title"
        app:layout_constraintBottom_toBottomOf="@+id/battery_level_title"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:text="---"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voltage_viatom"
        app:layout_constraintStart_toEndOf="@+id/battery_voltage_title"
        app:layout_constraintBottom_toBottomOf="@+id/battery_voltage_title"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:text="---"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systolic_viatom"
        app:layout_constraintStart_toEndOf="@+id/systolic_title"
        app:layout_constraintBottom_toBottomOf="@+id/systolic_title"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:text="---"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diastolic_viatom"
        app:layout_constraintStart_toEndOf="@+id/diastolic_title"
        app:layout_constraintBottom_toBottomOf="@+id/diastolic_title"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:text="---"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pulse_viatom"
        app:layout_constraintStart_toEndOf="@+id/pulse_title"
        app:layout_constraintBottom_toBottomOf="@+id/pulse_title"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:text="---"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_data"
        app:layout_constraintStart_toStartOf="@+id/battery_level_title"
        app:layout_constraintTop_toBottomOf="@+id/pulse_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="28dp"
        android:text="Data"
        android:onClick="onClick"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activate_bp"
        app:layout_constraintStart_toEndOf="@+id/get_data"
        app:layout_constraintTop_toTopOf="@+id/get_data"
        android:layout_marginStart="20dp"
        android:textSize="28dp"
        android:text="BP"
        android:onClick="onClick"/>



</androidx.constraintlayout.widget.ConstraintLayout>